{
    "manifest_version": 3,
    "name": "Social Share Assistant",
    "version": "1.0",
    "description": "Easily share content on social media.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "32": "icon64.png",
        "48": "icon64.png",
        "128": "icon128.png"
      }
    },
    
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
     "32": "icon64.png",
      "48": "icon64.png",
      "128": "icon128.png"
    }




  }
  